
public class ContactApp {

	public static void main(String[] args) {
		System.out.println("Welcome to the Contact List Application");
		
		String choice = "y";
		
		while(choice.equalsIgnoreCase("y")) {
			String firstName = Console.getString("Enter first name:\t");
			String lastName = Console.getString("Enter last name:\t");
			String email = Console.getString("Enter email:\t");
			String phoneNumber = Console.getString("Enter phone number:\t:");
			
			Contact contact = new Contact(firstName, lastName, email, phoneNumber);
			
			System.out.println("--------------------------------------------------------");
			System.out.println("--------Contact Card------------------------------------");
			System.out.println("--------------------------------------------------------");
			System.out.println(contact.displayContact());
			System.out.println("--------------------------------------------------------");
			
			
			
			choice = Console.getString("Continue?(y/n)");
		}
	}
	


}
