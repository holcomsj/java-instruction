		System.out.println("++++++++++++++++++++++++++++++++++++");

		String choice = "y";
		int limit = 100;

		while (choice.equalsIgnoreCase("y")) {
			System.out.println("I'm thinking of a number between one and " + limit);
			System.out.println("Try to guess it!\n");

		
			boolean isGuessed = false;

			while (!isGuessed) {
				
		
			}
			choice = Console.getString("Try again? (y/n)");

		}

	}



}
